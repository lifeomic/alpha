{
  "name": "@lifeomic/alpha",
  "version": "0.2.0",
  "description": "Unified client for HTTP services.",
  "main": "lib/Alpha",
  "author": "LifeOmic <development@lifeomic.com>",
  "license": "UNLICENSED",
  "scripts": {
    "deploy": "lifeomic-publish --tags-only",
    "lint": "eslint .",
    "prepare": "yarn run transpile",
    "pretest": "yarn run lint",
    "test": "nyc ava",
    "transpile": "babel src --out-dir lib"
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "require": [
      "babel-register",
      "./test/setup.js"
    ]
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": 6
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": "semistandard"
  },
  "eslintIgnore": [
    "/lib/",
    "node_modules/"
  ],
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100
  },
  "devDependencies": {
    "@lifeomic/dev-tools": "^3.2.1",
    "ava": "^0.22.0",
    "aws-sdk-mock": "^1.7.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.26.0",
    "eslint": "^4.6.1",
    "eslint-config-semistandard": "^11.0.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "nock": "^9.0.14",
    "nyc": "^11.2.1",
    "proxyquire": "^1.8.0",
    "sinon": "^3.2.1"
  },
  "dependencies": {
    "aws-sdk": "^2.116.0",
    "axios": "^0.16.2",
    "docker-lambda": "^0.13.4"
  }
}

{
  "name": "@lifeomic/alpha",
  "version": "1.4.0",
  "description": "Unified client for HTTP services.",
  "main": "lib/Alpha",
  "types": "lib/Alpha.d.ts",
  "author": "LifeOmic <development@lifeomic.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lifeomic/alpha.git"
  },
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov > ./.nyc_output/lcov.info",
    "buildGrammar": "nearleyc src/utils/lambdaURL.ne -o src/utils/lambdaURLGrammar.ts",
    "lint": "eslint .",
    "prepare": "yarn buildGrammar",
    "pretest": "yarn buildGrammar && yarn lint",
    "test": "nyc ava",
    "prepublishOnly": "yarn tsc"
  },
  "ava": {
    "timeout": "30s",
    "verbose": true,
    "files": [
      "test/**/*.test.js"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register",
      "./test/setup.js"
    ],
    "extensions": [
      "ts",
      "js"
    ]
  },
  "eslintConfig": {
    "extends": "plugin:@lifeomic/node/recommended"
  },
  "eslintIgnore": [
    "/lib/",
    "src/utils/lambdaURLGrammar.ts"
  ],
  "nyc": {
    "check-coverage": true,
    "exclude": [
      "src/utils/lambdaURLGrammar.ts",
      "test/**"
    ],
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100
  },
  "devDependencies": {
    "@lifeomic/eslint-plugin-node": "^2.0.1",
    "@types/node": "^14.14.25",
    "ava": "^3.15.0",
    "aws-sdk-mock": "^5.1.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.19.0",
    "husky": "^4.3.8",
    "nock": "^13.0.7",
    "nyc": "^15.1.0",
    "proxyquire": "^2.1.3",
    "sinon": "^9.2.4",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@types/aws-lambda": "^8.10.71",
    "@types/lodash": "^4.14.168",
    "@types/nearley": "^2.11.1",
    "aws-sdk": "^2.804.0",
    "axios": "^0.21.1",
    "docker-lambda": "^0.15.3",
    "lodash": "^4.17.20",
    "nearley": "^2.20.1",
    "resolve-pathname": "^3.0.0",
    "url-parse": "^1.4.7"
  },
  "publishConfig": {
    "access": "public"
  }
}

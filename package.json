{
  "name": "@lifeomic/alpha",
  "version": "0.13.2",
  "description": "Unified client for HTTP services.",
  "main": "lib/Alpha",
  "types": "lib/Alpha.d.ts",
  "author": "LifeOmic <development@lifeomic.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lifeomic/alpha.git"
  },
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "buildGrammar": "nearleyc src/adapters/helpers/lambdaURL.ne -o src/adapters/helpers/lambdaURLGrammar.js",
    "lint": "eslint .",
    "prepare": "yarn run transpile && yarn buildGrammar && cp src/Alpha.d.ts lib",
    "pretest": "yarn buildGrammar && yarn lint",
    "test": "nyc ava",
    "transpile": "babel src --out-dir lib"
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "require": [
      "babel-register",
      "./test/setup.js"
    ]
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": 6
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": "plugin:@lifeomic/node/recommended"
  },
  "eslintIgnore": [
    "/lib/",
    "src/adapters/helpers/lambdaURLGrammar.js"
  ],
  "nyc": {
    "check-coverage": true,
    "exclude": [
      "src/adapters/helpers/lambdaURLGrammar.js"
    ],
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100
  },
  "devDependencies": {
    "@lifeomic/eslint-plugin-node": "^1.1.1",
    "ava": "^0.25.0",
    "aws-sdk-mock": "^4.0.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.26.0",
    "coveralls": "^3.0.1",
    "eslint": "^5.0.0",
    "nock": "^10.0.0",
    "nyc": "^13.2.0",
    "proxyquire": "^2.0.1",
    "sinon": "^6.0.0"
  },
  "dependencies": {
    "aws-sdk": "^2.184.0",
    "axios": "^0.18.0",
    "docker-lambda": "^0.15.2",
    "lodash": "^4.17.11",
    "nearley": "^2.16.0",
    "whatwg-url": "^7.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
